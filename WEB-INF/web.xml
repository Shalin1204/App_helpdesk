<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://jakarta.ee/xml/ns/jakartaee
         http://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/servlets/LoginServlet</url-pattern>
    </servlet-mapping>

    <!-- Complaint Servlet -->
    <servlet>
        <servlet-name>ComplaintServlet</servlet-name>
        <servlet-class>servlets.ComplaintServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ComplaintServlet</servlet-name>
        <url-pattern>/servlets/ComplaintServlet</url-pattern>
    </servlet-mapping>

    <!-- Incharge Dashboard Servlet -->
    <servlet>
        <servlet-name>InchargeDashboardServlet</servlet-name>
        <servlet-class>servlets.InchargeDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InchargeDashboardServlet</servlet-name>
        <url-pattern>/servlets/InchargeDashboardServlet</url-pattern>
    </servlet-mapping>

    <!-- Worker Dashboard Servlet -->
    <servlet>
        <servlet-name>WorkerDashboardServlet</servlet-name>
        <servlet-class>servlets.WorkerDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WorkerDashboardServlet</servlet-name>
        <url-pattern>/servlets/WorkerDashboardServlet</url-pattern>
    </servlet-mapping>

    <!-- Update Task Status Servlet -->
    <servlet>
        <servlet-name>UpdateTaskStatusServlet</servlet-name>
        <servlet-class>servlets.UpdateTaskStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateTaskStatusServlet</servlet-name>
        <url-pattern>/servlets/UpdateTaskStatusServlet</url-pattern>
    </servlet-mapping>

    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>GUI/login.html</welcome-file>
    </welcome-file-list>

</web-app>
